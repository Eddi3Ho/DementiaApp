<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/blue_gradient_background">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz"
            android:paddingHorizontal="25dp"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"

            android:textStyle="bold"
            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/symptoms_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/symptom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic 1: Dementia Symptoms"
            android:paddingHorizontal="15dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/lighter_black"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progress_symptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:paddingHorizontal="15dp"
            android:max="10"
            android:progress="3"
            android:progressDrawable="@drawable/progress_bar_gradient_blue"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="17dp">

            <TextView
                android:id="@+id/symptom_complete"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:text="Complete" />

            <TextView
                android:id="@+id/symptom_score"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/read_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Take Quiz >>" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tips_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic 2: Tips for communicating with dementia"
            android:paddingHorizontal="15dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/lighter_black"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progress_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:paddingTop="70dp"
            android:paddingBottom="50dp"
            android:paddingHorizontal="15dp"
            android:max="10"
            android:progress="3"
            android:progressDrawable="@drawable/progress_bar_gradient_red"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/text_dialog">

            <TextView
                android:id="@+id/tips_complete"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:text="Complete" />

            <TextView
                android:id="@+id/tips_score"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/read_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Take Quiz >>" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dealing_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/dealing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic 3: Dealing with people with dementia"
            android:textColor="@color/lighter_black"
            android:paddingHorizontal="15dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/dealing_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:paddingHorizontal="15dp"
            android:max="10"
            android:progress="1"
            android:progressDrawable="@drawable/progress_bar_gradient_green"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/text_dialog">

            <TextView
                android:id="@+id/dealing_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incomplete"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dealing_score"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/read_more3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Take Quiz >>" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generate_cert"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dealing_card"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gradient_blue"
        android:text="Claim your certifcate"
        android:textColor="@color/white"
        android:textSize="17sp"></androidx.appcompat.widget.AppCompatButton>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/nav_menu" />

</RelativeLayout>

