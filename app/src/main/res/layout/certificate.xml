<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Certificate background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cert_image"
        android:scaleType="centerCrop" />

    <!-- Certificate title -->
    <TextView
        android:id="@+id/certificate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate of Completion"
        android:textSize="36sp"
        android:textColor="#FFC107"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="96dp"
        android:layout_centerHorizontal="true" />

    <!-- Participant name -->
    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/certificate_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <!-- Course name -->
    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Development"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/participant_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Date of completion -->
    <TextView
        android:id="@+id/completion_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed on June 1, 2023"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/course_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>